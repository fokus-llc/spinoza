
= form_for resource,
  :html => { :class => 'fx-login' },
           :as => resource_name,
           :url => session_path(resource_name) do |f|

  = f.label :email
  = f.email_field :email, :autofocus => true
  %br/

  = f.label :password
  = f.password_field :password
  %br/

  = f.hidden_field :remember_me, :value => true

  = f.submit "log in"

= render "devise/shared/links"

